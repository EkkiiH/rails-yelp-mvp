<h1>Restaurant</h1>
<div class="card m-3 p-3" style="width: 20rem;">
  <%= render @restaurant %>
  <p>
    <%= link_to "Edit" , edit_restaurant_path,  class: "btn btn-success" %>
    <%= link_to "Delete", restaurant_path(@restaurant), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
  </p>
  <div>
    <p><%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-warning" %></p>
    <% @restaurant.reviews.each do |review| %>
      <p><%= review.content %></p>
      <p><%= link_to "Delete", review_path(review), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} , class: "btn btn-danger" %></p>
    <% end %>
  </div>
</div>

<p><%= link_to "Go back to the list" , restaurants_path,  class: "btn btn-primary"%></p>
